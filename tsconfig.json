{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext", "es2020"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["src/test/cypress"]
}
